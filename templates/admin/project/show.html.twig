{% extends 'security/admin.html.twig'%}

{% block title %}Project{% endblock %}

{% block content %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Links</th>
                <td>{{ project.links }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ project.picture }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ project.cover }}</td>
            </tr>
            <tr>
                <th>IsPublic</th>
                <td>{{ project.isPublic ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('project_index') }}">back to list</a>

    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>

    {{ include('admin/project/_delete_form.html.twig') }}
{% endblock %}
