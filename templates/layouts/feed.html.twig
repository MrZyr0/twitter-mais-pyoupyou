    <ul class="ca bow box afo">
        <li class="rv b agz">
            {{ render(controller(
                'App\\Controller\\NewPyoupyouController::index'
            )) }}
        </li>
        {% for pyoupyou in pyoupyous %}
            {% set pyoupyouUser = pyoupyou.user %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="rv b agz">
                    <img
                            class="bos vb yb aff"
                            src="http://placehold.it/200x200">
                    <div class="rw">
                        <div class="bpb">
                            <small class="acx axc">{{ pyoupyou.date|date('d/m H:i') }}</small>
                            <h6>{{ pyoupyouUser.firstname }} {{ pyoupyouUser.lastname }}
                                {% if pyoupyouUser != user and title == 'Profil' %}
                                     - retweet by {{ user.firstname }} {{ user.lastname }}
                                {% endif %}
                            </h6>
                        </div>

                        <p>{{ pyoupyou.message }}</p>

                        <div class="boy" data-grid="images">
                            <div style="">
                                {% if pyoupyou.id in user.likesId %}
                                    {{ render(controller(
                                        'App\\Controller\\ActionController::like'
                                    )) }}
                                    {% else %}
                                    <i class="fas fa-heart fa-2x"></i>
                                {% endif %}

                                {{ render(controller(
                                    'App\\Controller\\ActionController::repost'
                                )) }}

                            </div>
                        </div>
                    </div>
                </li>
            {% elseif pyoupyou.isPublic %}
                <li class="rv b agz">
                    <img
                            class="bos vb yb aff"
                            src="http://placehold.it/200x200">
                    <div class="rw">
                        <div class="bpb">
                            <small class="acx axc">{{ pyoupyou.date|date('d/m H:i') }}</small>
                            <h6>{{ user.firstname }} {{ user.lastname }}</h6>
                        </div>

                        <p>{{ pyoupyou.message }}</p>

                        <div class="boy" data-grid="images">
                            <div style="">
                                <i class="far fa-heart fa-2x"></i>
                                <i class="fas fa-retweet fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </li>
            {% endif %}
        {% endfor %}
    </ul>